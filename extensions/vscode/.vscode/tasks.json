{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "GrimoireCSS: dev prep (build lsp + compile)",
      "dependsOn": ["cargo: build grimoire_css_lsp (debug)", "GrimoireCSS: compile"],
      "dependsOrder": "parallel",
      "problemMatcher": []
    },
    {
      "label": "cargo: build grimoire_css_lsp (debug)",
      "type": "shell",
      "command": "cargo",
      "args": ["build", "--features", "lsp", "--bin", "grimoire_css_lsp"],
      "options": {
        "cwd": "${workspaceFolder}/../.."
      },
      "problemMatcher": ["$rustc"],
      "group": "build"
    },
    {
      "label": "GrimoireCSS: compile",
      "type": "shell",
      "command": "npm",
      "args": ["run", "compile"],
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "problemMatcher": "$tsc"
    }
  ]
}
