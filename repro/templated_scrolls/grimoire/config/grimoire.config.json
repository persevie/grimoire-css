{
  "$schema": "https://raw.githubusercontent.com/persevie/grimoire-css/main/src/core/config/config-schema.json",
  "variables": null,
  "scrolls": [
    {
      "name": "custom-size",
      "spells": ["--box-width=150px", "--box-height=250px"]
    },
    {
      "name": "box",
      "spells": [
        "height=var(--box-height,_100px)",
        "width=var(--box-width,_100px)"
      ],
      "spellsByArgs": {
        "1": [
          "padding-top=$1",
          "padding-right=$1",
          "padding-bottom=$1",
          "padding-left=$1"
        ],
        "2": [
          "padding-top=$1",
          "padding-bottom=$1",
          "padding-left=$2",
          "padding-right=$2"
        ],
        "3": [
          "padding-top=$1",
          "padding-left=$2",
          "padding-right=$2",
          "padding-bottom=$3"
        ],
        "4": [
          "padding-top=$1",
          "padding-right=$2",
          "padding-bottom=$3",
          "padding-left=$4"
        ]
      }
    }
  ],
  "projects": [
    {
      "projectName": "templated_scrolls",
      "inputPaths": ["templated_scrolls.html"],
      "outputDirPath": ".",
      "singleOutputFileName": "templated_scrolls.css"
    }
  ],
  "shared": null,
  "critical": null,
  "lock": null
}
